@model IEnumerable<FirstCoreApp.Models.TeacherModal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherSubject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherFaculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherSubject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherFaculty)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
